#!/usr/bin/env ruby

require 'boson/runner'
require 'pathname'

$:.unshift File.expand_path("../../lib", __FILE__)
require 'babot'

class BabotRunner < Boson::Runner
  def initialize
    Babot.configure!
  end

  option :config, type: :string
  def update(options = {})
    Babot.update
  end
end

BabotRunner.start
